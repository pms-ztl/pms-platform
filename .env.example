# ===========================================
# PMS Platform - Environment Configuration
# ===========================================
# For local dev:   cp .env.example .env
# For Docker:      No .env needed (defaults are built into docker-compose.yml)
# ===========================================

# Application
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database (PostgreSQL)
# docker-compose.dev.yml maps host port 5433 -> container port 5432
# IMPORTANT: Use 127.0.0.1 (NOT localhost) â€” Windows resolves localhost to IPv6 ::1 which Docker doesn't listen on
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5433/pms_dev

# Redis
REDIS_URL=redis://127.0.0.1:6379

# JWT Authentication (32+ characters required)
JWT_SECRET=pms-development-jwt-secret-key-32chars
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Session Secret (32+ characters required)
SESSION_SECRET=pms-development-session-secret-32ch

# Encryption (32 characters required)
ENCRYPTION_KEY=pms-dev-encryption-key-32chars!!

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:5173

# Logging
LOG_LEVEL=debug

# MFA
MFA_ISSUER=PMS Platform

# SMTP Email (optional - leave empty to disable emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=PMS Platform <noreply@pms-platform.com>
