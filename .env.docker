# ===========================================
# PMS Platform Docker Environment
# ===========================================
# This file is used by Docker Compose
# Copy to .env and customize as needed

# Application
NODE_ENV=development

# Database (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pms_dev
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Backend API
BACKEND_PORT=3001

# Frontend
FRONTEND_PORT=3002
VITE_API_URL=http://localhost:3001/api/v1

# JWT Authentication
JWT_SECRET=docker-dev-jwt-secret-change-in-production-123456789
JWT_REFRESH_SECRET=docker-dev-refresh-secret-change-in-production-987654321
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# MFA
MFA_ISSUER=PMS Platform Docker

# Encryption
ENCRYPTION_KEY=docker-dev-32-char-key-change!!

# CORS (allow frontend to connect to backend)
CORS_ORIGINS=http://localhost:3002,http://frontend:3002

# Logging
LOG_LEVEL=debug

# Email (optional - leave empty to skip)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@pms-platform.com

# SSO - SAML (optional)
SAML_ISSUER=
SAML_CALLBACK_URL=http://localhost:3001/auth/saml/callback
SAML_CERT_PATH=

# SSO - OIDC (optional)
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_CALLBACK_URL=http://localhost:3001/auth/oidc/callback

# Integration: Workday (optional)
WORKDAY_API_URL=
WORKDAY_CLIENT_ID=
WORKDAY_CLIENT_SECRET=

# Integration: Slack (optional)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=

# Integration: Microsoft 365 (optional)
MS365_CLIENT_ID=
MS365_CLIENT_SECRET=
MS365_TENANT_ID=

# Feature Flags
FEATURE_AI_CALIBRATION=true
FEATURE_BIAS_DETECTION=true
FEATURE_OFFLINE_SYNC=true
